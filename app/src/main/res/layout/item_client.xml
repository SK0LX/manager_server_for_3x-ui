<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_item_rounded"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="2dp">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Онлайн"
        android:textColor="#00FF00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start" />

    <!-- Подзаголовок -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EkaTepuna"
        android:textColor="@color/gray_600"
        android:textSize="14sp"
        android:gravity="start"
        android:layout_marginTop="4dp" />

    <!-- Трафик - одна строка с двумя значениями -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">

        <!-- Левое значение трафика -->
        <TextView
            android:id="@+id/trafficLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8.06 GB"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- Правое значение трафика -->
        <TextView
            android:id="@+id/trafficRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8.06 GB"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end" />

    </LinearLayout>

    <!-- Дата окончания -->
    <TextView
        android:id="@+id/expiryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="До: 31.12.2024"
        android:textColor="@color/gray_600"
        android:textSize="12sp"
        android:gravity="end"
        android:layout_marginTop="4dp" />

</LinearLayout>