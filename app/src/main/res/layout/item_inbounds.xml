<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Первая строка: ID и переключатель -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/inboundId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID: 123"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/enabledSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/purple_500"
            android:trackTint="@color/purple_200" />

    </LinearLayout>

    <!-- Вторая строка: Имя и порт -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/inboundName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Имя инбаунда"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/inboundPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Порт: 8080"
            android:textColor="@color/gray_600"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Третья строка: Протокол и клиенты -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/inboundProtocol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Протокол: VMess"
            android:textColor="@color/gray_600"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/clientCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Клиенты: 5"
            android:textColor="@color/gray_600"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Четвертая строка: Трафик и дата -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/trafficInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Трафик: 1.2GB/5GB"
            android:textColor="@color/gray_600"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/expiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.01.2025"
            android:textColor="@color/gray_600"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Кнопки управления -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <!-- Кнопка редактирования -->
        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_edit"
            android:tint="@color/purple_500"
            android:contentDescription="Edit" />

        <!-- Кнопка удаления -->
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_delete"
            android:tint="@color/red_500"
            android:contentDescription="Delete" />
        <!--Кнопка провала в клиентов -->
        <ImageButton
            android:id="@+id/go_in_clients"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/black"
            android:contentDescription="Delete" />

    </LinearLayout>

</LinearLayout>