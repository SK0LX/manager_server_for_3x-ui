<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Inbound"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etInboundName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Inbound Name" />

    <EditText
        android:id="@+id/etInboundPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Port"
        android:inputType="number" />

    <Spinner
        android:id="@+id/protocolSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etClientCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Client Count"
        android:inputType="number" />

    <EditText
        android:id="@+id/etTrafficLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Traffic Limit (GB)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etExpiryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Expiry Date (dd.MM.yyyy)"
        android:inputType="date" />

    <!-- Кнопка добавления -->
    <Button
        android:id="@+id/btnAddInbound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Inbound"
        android:layout_marginTop="8dp" />

</LinearLayout>